@import 'nib'


html, body, .main-wrapper
	height 100%

body
	color white

.main-wrapper
	position relative
	background-size cover
	background-position center center

.main-wrapper-mask
	absolute top 0 left 0
	width 100%
	height 100%
	z-index 1
	background fade-out(black, 60%)

.main-container
	z-index 2
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

